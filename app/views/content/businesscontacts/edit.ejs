<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= businesscontact._id %>" >

                <div class="form-group">
                    <label for="firstNameTextField">First Name</label>
                    <input type="text" class="form-control"
                    id="firstNameTextField"
                    placeholder="Enter First Name"
                    name="firstname" 
                    value="<%= businesscontact.firstname %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="lastNameTextField">Last Name</label>
                    <input type="text" class="form-control"
                    id="lastNameTextField"
                    placeholder="Enter Last Name"
                    name="lastname" 
                    value="<%= businesscontact.lastname %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="addressTextField">Street Address</label>
                    <input type="text" class="form-control"
                    id="addressTextField"
                    placeholder="Enter the Street Address"
                    name="address" 
                    value="<%= businesscontact.address %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="cityTextField">City</label>
                    <input type="text" class="form-control"
                    id="cityTextField"
                    placeholder="Enter the City Name"
                    name="city" 
                    value="<%= businesscontact.city %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="provinceTextField">Province</label>
                    <input type="text" class="form-control"
                    id="provinceTextField"
                    placeholder="Enter the Province Name"
                    name="province"                     
                    value="<%= businesscontact.province %>"
                    required
                    >
                    </input>
                </div>

                <div class="form-group">
                    <label for="postalCodeTextField">Postal Code</label>
                    <input type="text" class="form-control" pattern="^[A-Za-z]\d[A-Za-z][ -]?\d[A-Za-z]\d$"
                    id="postalCodeTextField"
                    placeholder="Enter the Postal Code"
                    name="postalcode" 
                    value="<%= businesscontact.postalcode %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="phoneTextField">Phone Number</label>
                    <input type="number" class="form-control"
                    id="phoneNumberTextField"
                    placeholder="Enter the Phone Number"
                    name="phonenumber" 
                    value="<%= businesscontact.phonenumber %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Email Address"
                    name="email" 
                    value="<%= businesscontact.email %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Add</button>
                
                    <a href="/movie-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

